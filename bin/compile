#!/usr/bin/env bash
# bin/compile BUILD_DIR CACHE_DIR ENV_DIR
set -euo pipefail -x

BUILD_DIR="$1"
CACHE_DIR="$2"
ENV_DIR="$3"
OPENRESTY_DIR="$BUILD_DIR/openresty"

mkdir -p "$OPENRESTY_DIR"
tar -zxvf "openresty-$STACK".tar.gz -C "$OPENRESTY_DIR"

echo "-----> openresty: Installed $(cat $OPENRESTY_DIR/version.txt)"

cp bin/startopenresty "$BUILD_DIR/openresty/bin"
echo "-----> openresty: Added startopenresty to openresty/bin"
