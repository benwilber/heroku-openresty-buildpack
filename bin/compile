#!/usr/bin/env bash
# bin/compile BUILD_DIR CACHE_DIR ENV_DIR
set -euo pipefail

BUILD_DIR="$1"
CACHE_DIR="$2"
ENV_DIR="$3"
INSTALL_DIR="$BUILD_DIR/openresty"

tar -zxf "openresty-$STACK".tar.gz -C "$BUILD_DIR"
cp -a bin/startopenresty "$INSTALL_DIR/bin"

echo "-----> OpenResty: Installed OpenResty"
fold -w 80 -s < "$INSTALL_DIR/openresty-V.txt" | pr -to 7
